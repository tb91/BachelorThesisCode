package projects.reactiveSpanner.nodes.timers.BCA;

import projects.reactiveSpanner.nodes.messageHandlers.BCA.BCAMessageHandler;
import sinalgo.nodes.timers.Timer;

public class PauseTimer extends Timer {
	public boolean enabled = true;
	public BCAMessageHandler msgHandler;
	public double pause;
	
	public PauseTimer(double pause, BCAMessageHandler msgHandler){
		this.msgHandler = msgHandler;
		this.pause = pause;
	}
	
	public void disable() {
		enabled = false;
	}
	

	@Override
	public void fire() {

		if(enabled) {
			msgHandler.broadcastFirstRequest(pause);
		}
	}

}
